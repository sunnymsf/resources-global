{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.snippetSuggestions": "top",
  "editor.tabSize": 4,
  "[markdown]": {
    "editor.tabSize": 2
  },
  "[raml]": {
    "editor.tabSize": 2
  },
  "[oas]": {
    "editor.tabSize": 2
  },
  "[yml]": {
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.tabSize": 2
  },
  "git.autofetch": true,
  "git.fetchOnPull": true,
  "git.pullTags": true,
  "telemetry.enableTelemetry": false,
  "acrolinx.serverAddress": "http://salesforce.acrolinx.cloud",
  "markdownlint.config": {
    "MD004": {
      "style": "dash"
    },
    "MD007": false,
    "MD010": false,
    "MD013": false,
    "MD014": false,
    "MD026": false,
    "MD036": false,
    "MD043": false,
    "MD044": false,
    "MD030": false,
    "MD003": {
      "style": "atx"
    },
    "MD035": {
      "style": "---"
    },
    "MD046": {
      "style": "fenced"
    },
    "MD048": {
      "style": "backtick"
    }
  },
  "markdown.links.openLocation": "beside",
  "files.associations": {
    "*.raml": "yaml"
  },
  "markdown.extension.tableFormatter.normalizeIndentation": true,
  "markdownShortcuts.bullets.marker": "-",
  "markdownShortcuts.icons.image": true,
  "markdownShortcuts.icons.link": true,
  "markdownShortcuts.italics.marker": "_",
  "markdown.extension.italic.indicator": "_",
  "markdown.extension.math.enabled": false,
  "markdown.extension.print.absoluteImgPath": false,
  "markdownShortcuts.icons.strikethrough": false,
  "markdownlint.run": "onSave",
  "markdownShortcuts.icons.italic": false,
  "markdownShortcuts.icons.bold": false,
  "yaml.schemas": {
    "https://gist.githubusercontent.com/SalesforceDocs-Bot/46a55d327c531f0276d20b2fa5b4f4d1/raw/opendocs.toc.schema.json": "**/-toc.yml",
    "https://gist.githubusercontent.com/SalesforceDocs-Bot/a632e80e8679c33ba102467bd041e8d3/raw/opendocs.config.schema.json": "content-config.yml",
    "https://gist.githubusercontent.com/SalesforceDocs-Bot/9ef8f716254bae7dc5ec14d8af0d2e66/raw/sfdocs-config.schema.json": "sfdocs-config.yml"
  },
  "yaml.validate": true,
  "yaml.schemaStore.enable": true,
  "yaml.completion": true,
  "[yaml]": {
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    },
    "editor.tabSize": 2
  },
  "extensions.ignoreRecommendations": true
}
